<h2>Edit Movie</h2>
<form action="/movies/edit/{{this._id}}" method="post">
  <input type="text" name="title" value="{{this.title}}">
  <input type="text" name="genre" value="{{this.genre}}">
  <input type="text" name="plot" value="{{this.plot}}">
  <select name="cast" multiple>
    {{#each this.cast}}
      <option value="{{this._id}}">{{this.name}}</option>
    {{/each}}
  </select>
  <button type="submit">Edit movie</button>
</form>